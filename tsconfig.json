{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-ts",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
, "src/design-system/index.tsx.old"  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-ts"
  ]
}
